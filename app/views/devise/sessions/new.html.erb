<div class = "new_member">  
  <h2 class = "ew_member-title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email , class: :"new_member-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label 'パスワード' , class: :"new_member-label"%><br />
      <%= f.password_field :password, autocomplete: "current-password" , class: :"new_member-form"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label 'パスワードを保存しますか？' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>