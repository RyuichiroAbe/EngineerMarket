
<div class = "new_member">

  <h2 class = "ew_member-title">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label 'ニックネーム', class: :"new_member-label" %><br />
      <%= f.text_field :nickname, class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label '苗字', class: :"new_member-label" %><br />
      <%= f.text_field :family_name, class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label '名前', class: :"new_member-label" %><br />
      <%= f.text_field :first_name, class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label '苗字（カタカナ）', class: :"new_member-label" %><br />
      <%= f.text_field :family_name_kana, class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label '名前（カタカナ）', class: :"new_member-label" %><br />
      <%= f.text_field :first_name_kana, class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label :email, class: :"new_member-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label 'パスワード(6文字以上)', class: :"new_member-label" %>
      <% if @minimum_password_length %>
      
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: :"new_member-form" %>
    </div>

    <div class="field">
      <%= f.label 'パスワード（確認用）', class: :"new_member-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: :"new_member-form" %>
    </div>

    <div class="new_member-btn">
      <%= f.submit "登録", class: :"new_member-btn-text" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
