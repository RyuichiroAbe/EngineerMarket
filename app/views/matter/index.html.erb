<% if user_signed_in? %>
  <%= render 'home/aftersign_header' %>

  <div class = content__title>
        <h2 class = midasi><span>最新案件</span></h2>
  </div>

  <div class = "contents">
    <% @matter.each do |matter| %>

      <div class = "content_main">
        
        <a class = "matter__title"><%= matter.name %></a>
        <a class = "matter__price">￥<%= matter.price %>/月</a>
        <a class = "matter"><%= matter.category %></a>
        <a class = "matter">必要スキル：<%= matter.skill %></a>
        <a class = "matter">提出期限日：<%= matter.filingday %></a>
        <% if user_signed_in? && current_user.id == matter.user_id %>
          <%= link_to "編集", edit_matter_path(matter) %>
          <%= link_to "削除", matter, method: :delete, data: { confirm: "#{matter.name}を削除して大丈夫ですか？" } %>
        <% end %>
        
        <a class = "description"><%= matter.description %></a>
      </div>
    <% end %>
  </div>

  <%= render 'home/footer' %>
<% else %>
  <%= render 'home/header' %>

  <div class = content__title>
        <h2 class = midasi><span>最新案件</span></h2>
  </div>

  <div class = "contents">
    <% @matter.each do |matter| %>

      <div class = "content_main">
        
        <a class = "matter__title"><%= matter.name %></a>
        <a class = "matter__price">￥<%= matter.price %>/月</a>
        <a class = "matter"><%= matter.category %></a>
        <a class = "matter">必要スキル：<%= matter.skill %></a>
        <a class = "matter">提出期限日：<%= matter.filingday %></a>

        
        <a class = "description"><%= matter.description %></a>
      </div>
    <% end %>
  </div>

  <%= render 'home/footer' %>
<% end %>

