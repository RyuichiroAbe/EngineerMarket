<% if user_signed_in? %>
  <%= render 'header' %>
  <h4> ようこそ<%= current_user.family_name %>さん！</h4>
  <%= render 'footer' %>
<% else %>
  <h2> 現在ログインしていません </h2>
  <%= link_to "ログイン", new_user_session_path, class: 'post' %>
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %> 
<% end %>